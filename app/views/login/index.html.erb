<html>
	<head>
		<meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<title> LOGIN </title>

			<style>
				#pic
				{
				background: url(/assets/job31.jpg);
				background-repeat: no-repeat, repeat;
				padding: 15px;
				background-size:cover;

				}

				input[type=text], select
				{
				width: 60%;
				padding: 12px 20px;
				margin: 8px 0;
				display: inline-block;
				border: 1px solid #ccc;
				border-radius: 4px;
				box-sizing: border-box;
				}

				input[type=submit]
				{
				width: 60%;
				background-color: #4CAF50;
				color: white;
				padding: 14px 20px;
				margin: 8px 0;
				border: none;
				border-radius: 4px;
				cursor: pointer;
				}

				input[type=submit]:hover
				{
				background-color: #45a049;
				}

				#heading
				{
				font-family: Papyrus, fantasy;
				margin-right:1200px;
				}


				a:link
				{
				text-decoration:none;
				color:white;
				font-family:Comic Sans MS;
				}

				a:hover
				{
				color:black;
				font-family:Comic Sans MS;
				}

				a:visited
				{
				color:white;
				font-family:Comic Sans MS;
				}

				div
				{
				border-radius: 2px;
				background-color: #f2f2f2;
				padding: 20px;
				}
			</style>

	</head>

	<body>
		
		<%= form_for :home do |f| %>
		
		<div id="top" style="text-align:right;font-size:140%;background-color:#587CE5;padding:15px">
			<a id="heading" style="color:white;font-size:180%"><b>JOBHUNT</b></a>
			<%= link_to "HOME",{:action=>'index', :controller=>'home'} %>|
			<%= link_to "REGISTER",{:action=>'new', :controller=>'users'} %>|
			<%= link_to "LOGIN",{:action=>'index', :controller=>'login'} %>|
			<%= link_to "CONTACT",{:action=>'index', :controller=>'feedback'} %>
		</div>

		<div id="pic" style="height:740px;width:1300px;">

		
				<div style="height:847x;width:450px;margin-left:350px;margin-top:70px;">
						 <h3 style = "text-align:center">ADMIN LOGIN</h3>
						<%= form_for :login, :url => {:action => "admin"} do |a| %>
						<label for="email"> EMAIL </label>
						<%= a.text_field :email, :style=>'width:300px;margin-left:50px;', :placeholder=>'Your email-id..' %>
						<br><br>
						<label for="password"> PASSWORD </label>
						<%= a.password_field :password, :style=>'width:300px;margin-left:15px;height:35px', :placeholder=>'Your password..' %>
						<br><br>
						<%= a.submit(:value=> 'Login') %>
						<% end %>
				</div>
				
				<div style="height:847x;width:450px;margin-left:350px;margin-top:80px;">
						<h3 style = "text-align:center">USER LOGIN</h3>
						<%= form_for :login, :url => {:action => "login_attempt"} do |f| %>
						<label for="email"> EMAIL </label>
						<%= f.text_field :email, :style=>'width:300px;margin-left:50px;', :placeholder=>'Your email-id..' %>
						<br><br>
						<label for="password"> PASSWORD </label>
						<%= f.password_field :password, :style=>'width:300px;margin-left:15px;height:35px', :placeholder=>'Your password..' %>
						<br><br>
						<%= f.submit(:value=> 'Login') %>
						<% end %>
				</div>
				
				
		</div>
	</body>
	
	<% end %>
	
</html>
